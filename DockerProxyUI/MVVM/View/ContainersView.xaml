<UserControl x:Class="DockerProxyUI.MVVM.View.ContainerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DockerProxyUI.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Containers" 
                   Foreground="{StaticResource PrimaryColor}"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"/>

        <TextBox Width="250"
                 Height="40"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 Margin="5"
                 Style="{StaticResource SearchBoxTheme}" />

        <DataGrid RowStyle="{DynamicResource DataGridRowTheme}" CellStyle="{DynamicResource DataGridCellTheme}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderTheme}" Style="{DynamicResource DataGridTheme}" 
                  ItemsSource="{Binding Containers}"
                  >

            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name}"
                                    FontSize="14"
                                    />

                <DataGridTextColumn Header="Image"
                                    Binding="{Binding Image}"
                                    FontSize="12"
                                    />

                <DataGridTextColumn Header="Status"
                                    Binding="{Binding Status}"
                                    FontSize="12"
                                    />

                <DataGridTextColumn Header="Ports"
                                    Binding="{Binding Ports}"
                                    FontSize="12"
                                    />

                <DataGridTextColumn Header="Started"
                                    Binding="{Binding State}"
                                    FontSize="12"
                                    />
            </DataGrid.Columns>

        </DataGrid>

    </StackPanel>
</UserControl>
