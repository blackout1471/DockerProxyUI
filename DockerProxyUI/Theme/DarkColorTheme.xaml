<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Double x:Key="TitelFontSize">24</sys:Double>

    <sys:Double x:Key="LargeFontSize">20</sys:Double>

    <sys:Double x:Key="MediumFontSize">14</sys:Double>

    <sys:Double x:Key="SmallFontSize">12</sys:Double>

    <SolidColorBrush x:Key="BackgroundColor"
                     Color="#2e3440"/>

    <SolidColorBrush x:Key="MenuBackgroundColor"
                     Color="#1A1D24" />

    <SolidColorBrush x:Key="PrimaryColor"
                     Color="White" />

    <SolidColorBrush x:Key="SecondaryColor"
                     Color="#3b4252" />

    <SolidColorBrush x:Key="TertiaryColor"
                     Color="#434c5e" />
</ResourceDictionary>